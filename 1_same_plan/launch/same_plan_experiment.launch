<?xml version="1.0"?>
<launch>

    <!-- used for mercury planner and plan validation -->
    <arg name="domain_path" default="/home/oscar/prog_ws/eclipse/2016-robocupsymp-oscar/experiments/experiments_console_log/6" />
    <arg name="problem" default="1" />
    
    <!-- mercury planner, runs an external script located under mcr_task_planners -->
    <include file="$(find mcr_task_planners)/ros/launch/mercury_planner_example.launch">
        <arg name="domain_path" value="$(arg domain_path)/domain.pddl" />
        <arg name="problem_path" value="$(arg domain_path)/problems/p$(arg problem).pddl" />
    </include>

    <!-- VAL plan validation tool, tell if a plan solves the goals proposed by PDDL problem definition -->
    <include file="$(find mcr_plan_validation)/ros/launch/plan_validator_example.launch">
        <arg name="domain_path" value="$(arg domain_path)/domain.pddl" />
        <arg name="problem_path" value="$(arg domain_path)/problems/p$(arg problem).pddl" />
        <arg name="plan_path" value="$(arg domain_path)/runs/$(arg problem)/mercury.plan" />
    </include>
    
    <!-- rqt_node event for planning debugging -->
    <include file="$(find mir_planning_core)/ros/launch/planning_rqt_node_event.launch" />

</launch>
